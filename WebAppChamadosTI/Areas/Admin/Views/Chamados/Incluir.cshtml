@model WebAppChamadosTI.Models.Chamado

@{
    ViewData["Title"] = "Incluir";
}

<h1 class="mb-4">Incluir</h1>

<h4 class="text-secondary">Chamado</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Incluir" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="DataSolicitacao" class="form-label fw-bold text-primary"></label>
                <input asp-for="DataSolicitacao" class="form-control shadow-sm rounded" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" type="datetime-local" />
                <span asp-validation-for="DataSolicitacao" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Problema" class="form-label fw-bold text-primary"></label>
                <textarea asp-for="Problema" class="form-control shadow-sm rounded"></textarea>
                <span asp-validation-for="Problema" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Ocorrencia" class="form-label fw-bold text-primary"></label>
                <textarea asp-for="Ocorrencia" class="form-control shadow-sm rounded"></textarea>
                <span asp-validation-for="Ocorrencia" class="text-danger"></span>
            </div>

@*             <div class="form-group form-check mb-3">
                <input class="form-check-input" asp-for="Concluido" />
                <label class="form-check-label fw-bold text-primary" asp-for="Concluido"></label>
            </div> *@

            <div class="form-group mb-3">
                <label asp-for="ValorTotal" class="form-label fw-bold text-primary"></label>
                <input asp-for="ValorTotal" class="form-control shadow-sm rounded" />
                <span asp-validation-for="ValorTotal" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ClienteId" class="form-label fw-bold text-primary">Cliente</label>
                <select asp-for="ClienteId" class="form-control shadow-sm rounded" asp-items="ViewBag.Clientes"></select>
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TecnicoId" class="form-label fw-bold text-primary">Técnico</label>
                <select asp-for="TecnicoId" class="form-control shadow-sm rounded" asp-items="ViewBag.Tecnicos"></select>
                <span asp-validation-for="TecnicoId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success me-2">Salvar</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
