@model WebAppChamadosTI.Models.Dentista
@{
    ViewData["Title"] = "Editar Dentista";
    bool isAtendente = User.IsInRole("Atendente");
    var usuarioLogadoId = int.Parse(User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value ?? "0");
    bool ehMesmoUsuario = usuarioLogadoId == Model.Id;
}

<h2>Editar Dentista</h2>

<form asp-action="Alterar" method="post">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    @if (isAtendente)
    {
        <div class="form-group">
            <label>Vincular ao usuário</label>
            <select asp-for="UsuarioId" asp-items="ViewBag.Usuarios" class="form-control"></select>
            <span asp-validation-for="UsuarioId" class="text-danger"></span>
        </div>
    }

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Especialidade"></label>
        <input asp-for="Especialidade" class="form-control" />
        <span asp-validation-for="Especialidade" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Telefone"></label>
        <input asp-for="Telefone" class="form-control" />
        <span asp-validation-for="Telefone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataNascimento"></label>
        <input asp-for="DataNascimento" class="form-control" type="date" />
        <span asp-validation-for="DataNascimento" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Endereco"></label>
        <input asp-for="Endereco" class="form-control" />
        <span asp-validation-for="Endereco" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>

    @if (ehMesmoUsuario)
    {
        <div class="mt-3">
            <a class="btn btn-warning" asp-area="" asp-controller="Conta" asp-action="AlterarSenha">
                🔐 Alterar minha senha
            </a>

        </div>
    }
</form>
