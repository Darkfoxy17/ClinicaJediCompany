@model List<WebAppChamadosTI.Models.Dentista>
@using System.Security.Claims

@{
    ViewData["Title"] = "Lista de Dentistas";
    var userRole = User.FindFirst(ClaimTypes.Role)?.Value;
}

<h2>Dentistas</h2>

@if (userRole == "Atendente")
{
    <form method="post">
        <input type="text" name="busca" placeholder="Buscar por nome ou e-mail..." class="form-control mb-2" />
        <button type="submit" class="btn btn-primary">Buscar</button>
    </form>
}

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Especialidade</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dentista in Model)
        {
            <tr>
                <td>@dentista.Nome</td>
                <td>@dentista.Especialidade</td>
                <td>
                    <a href="@Url.Action("Exibir", new { id = dentista.Id })" class="btn btn-info btn-sm">Exibir</a>

                    @if (userRole == "Atendente" || userRole == "Administrador" || userRole == "Dentista")
                    {
                        <a href="@Url.Action("Alterar", new { id = dentista.Id })" class="btn btn-warning btn-sm">Alterar</a>
                    }

                    @if (userRole == "Atendente")
                    {
                        <a href="@Url.Action("Excluir", new { id = dentista.Id })" class="btn btn-danger btn-sm">Excluir</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (userRole == "Atendente")
{
    <a href="@Url.Action("Incluir")" class="btn btn-primary">Novo Dentista</a>
}
