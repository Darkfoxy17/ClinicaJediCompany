@model WebAppChamadosTI.Models.Dentista
@{
    ViewData["Title"] = "Excluir Dentista";
}

<h2>Excluir Dentista</h2>

<p>Tem certeza que deseja excluir o dentista <strong>@Model.Nome</strong> com email <strong>@Model.Usuario.Email</strong>?</p>

<form asp-action="Excluir" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sim, Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
