@model WebAppChamadosTI.Models.Tecnico

@{
    ViewData["Title"] = "Exibir";
}

<h1>Detalhes</h1>

<div>
    <h4>Técnico</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Especialidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Especialidade)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Email)
        </dd>

        @if (Model.Usuario?.Arquivo != null)
        {
            <dt class="col-sm-2">Foto</dt>
            <dd class="col-sm-10">
                <img src="~/uploads/@Model.Usuario.Arquivo" alt="Foto do usuário" class="img-thumbnail" width="150" height="150" />
            </dd>
        }
    </dl>
</div>

<div>
    <a asp-action="Alterar" asp-route-id="@Model?.Id" class="btn btn-primary">Alterar</a> |
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
