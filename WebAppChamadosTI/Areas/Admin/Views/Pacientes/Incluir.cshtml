@model WebAppChamadosTI.Models.Usuario

@{
    ViewData["Title"] = "Incluir Usuário Dentista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center" style="min-height: 80vh;">
    <div class="col-md-6">
        <h1 class="text-center mb-4">Novo Usuário Dentista</h1>
        <hr />

        <form asp-action="Incluir" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label fw-bold text-primary"></label>
                <input asp-for="Email" class="form-control shadow-sm rounded" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Senha" class="form-label fw-bold text-primary"></label>
                <input asp-for="Senha" class="form-control shadow-sm rounded" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label fw-bold text-primary">Perfil</label>
                <input class="form-control shadow-sm rounded" value="Dentista" readonly />
            </div>

            <div class="form-group text-end mt-4">
                <input type="submit" value="Incluir" class="btn btn-success me-2" />
                <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
