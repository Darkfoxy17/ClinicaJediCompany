@model WebAppChamadosTI.Models.Paciente

@{
    ViewBag.Title = "Detalhes do Paciente";
}

<h2>Dados do Paciente</h2>

<dl class="row">
    <dt class="col-sm-2">Nome</dt>
    <dd class="col-sm-10">@Model.Nome</dd>

    <dt class="col-sm-2">E-mail</dt>
    <dd class="col-sm-10">@Model.Usuario?.Email</dd>

    <dt class="col-sm-2">Telefone</dt>
    <dd class="col-sm-10">@Model.Telefone</dd>

    <dt class="col-sm-2">Data de Nascimento</dt>
    <dd class="col-sm-10">@Model.DataNascimento.ToShortDateString()</dd>

    <dt class="col-sm-2">Endereço</dt>
    <dd class="col-sm-10">@Model.Endereco</dd>
</dl>

<div>
    <a asp-action="Alterar" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
