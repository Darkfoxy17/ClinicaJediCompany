@model WebAppChamadosTI.Models.Usuario
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Excluir Usuário";
}

<h2>Excluir Usuário</h2>

<h3>Tem certeza que deseja excluir este usuário?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Perfil</dt>
        <dd class="col-sm-10">@Model.Perfil.ToString()</dd>
    </dl>
</div>

<form asp-action="Excluir" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Excluir" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
