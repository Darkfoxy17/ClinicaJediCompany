@model WebAppChamadosTI.Models.Paciente

@{
    ViewBag.Title = "Excluir Paciente";
}

<h2>Confirmação de Exclusão</h2>

<div class="alert alert-danger">
    Tem certeza que deseja excluir o paciente <strong>@Model.Nome</strong>?
</div>

<form asp-action="Excluir" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
</form>
