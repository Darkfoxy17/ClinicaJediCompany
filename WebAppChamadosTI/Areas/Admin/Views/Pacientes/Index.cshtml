@model List<WebAppChamadosTI.Models.Paciente>
@using System.Security.Claims

@{
    ViewBag.Title = "Lista de Pacientes";
    var userRole = User.FindFirst(ClaimTypes.Role)?.Value;
}

<h2>Pacientes</h2>

@if (userRole == "Atendente")
{
    <form method="post">
        <input type="text" name="busca" placeholder="Buscar por nome ou e-mail..." class="form-control mb-2" />
        <button type="submit" class="btn btn-primary">Buscar</button>
    </form>
}

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Nome</th>
            <th>E-mail</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var paciente in Model)
        {
            <tr>
                <td>@paciente.Nome</td>
                <td>@paciente.Usuario?.Email</td>
                <td>
                    <a href="@Url.Action("Exibir", new { id = paciente.Id })" class="btn btn-info btn-sm">Exibir</a>

                    @if (userRole == "Atendente" || userRole == "Administrador" || userRole == "Paciente")
                    {
                        <a href="@Url.Action("Alterar", new { id = paciente.Id })" class="btn btn-warning btn-sm">Alterar</a>
                    }

                    @if (userRole == "Atendente" || userRole == "Administrador")
                    {
                        <a href="@Url.Action("Excluir", new { id = paciente.Id })" class="btn btn-danger btn-sm">Excluir</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
