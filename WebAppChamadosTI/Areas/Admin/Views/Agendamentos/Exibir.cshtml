@model WebAppChamadosTI.Models.Agendamento

@{
    ViewData["Title"] = "Exibir Agendamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center mt-5">
    <div class="col-md-8 border rounded shadow-sm bg-white p-4">
        <h2 class="text-center mb-4">Detalhes da Consulta</h2>
        <hr />

        <dl class="row">
            <dt class="col-sm-3 fw-bold text-primary">Paciente</dt>
            <dd class="col-sm-9">@(Model.Paciente?.Nome ?? "Não atribuído")</dd>

            <dt class="col-sm-3 fw-bold text-primary">@Html.DisplayNameFor(m => m.Procedimento)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Procedimento.Nome)</dd>

            <dt class="col-sm-3 fw-bold text-primary">Dentista</dt>
            <dd class="col-sm-9">@(Model.Dentista?.Nome ?? "Não atribuído")</dd>

            <dt class="col-sm-3 fw-bold text-primary">@Html.DisplayNameFor(m => m.Data)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Data)</dd>

            <dt class="col-sm-3 fw-bold text-primary">@Html.DisplayNameFor(m => m.Descricao)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Descricao)</dd>

            <dt class="col-sm-3 fw-bold text-primary">@Html.DisplayNameFor(m => m.StatusAgendamento)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.StatusAgendamento.Nome)</dd>
        </dl>

        <div class="text-center mt-4">
            <a asp-action="Alterar" asp-route-id="@Model?.Id" class="btn btn-primary me-2">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
        </div>
    </div>
</div>
