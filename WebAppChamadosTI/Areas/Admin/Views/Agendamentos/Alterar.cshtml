@model WebAppChamadosTI.Models.Agendamento

@{
    ViewData["Title"] = "Alterar";
}

<h1>Alterar</h1>

<h4>Chamado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Alterar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="PacienteId" class="form-label fw-bold text-primary">Paciente</label>
                <select asp-for="PacienteId" class="form-control shadow-sm rounded" asp-items="ViewBag.Pacientes"></select>
                <span asp-validation-for="PacienteId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DentistaId" class="form-label fw-bold text-primary">Dentista</label>
                <select asp-for="DentistaId" class="form-control shadow-sm rounded" asp-items="ViewBag.Dentistas"></select>
                <span asp-validation-for="DentistaId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Procedimento" class="form-label fw-bold text-primary"></label>
                <textarea asp-for="Procedimento" class="form-control shadow-sm rounded"></textarea>
                <span asp-validation-for="Procedimento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Descricao" class="form-label fw-bold text-primary"></label>
                <textarea asp-for="Descricao" class="form-control shadow-sm rounded"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label fw-bold text-primary">Data</label>
                <div class="form-control-plaintext bg-light border rounded px-3 py-2 shadow-sm">
                    @Model.Data.ToString("dd/MM/yyyy HH:mm")
                </div>
            </div>

            <div class="form-group">
                <label asp-for="StatusAgendamento" class="form-label fw-bold text-primary"></label>
                <textarea asp-for="StatusAgendamento" class="form-control shadow-sm rounded"></textarea>
                <span asp-validation-for="StatusAgendamento" class="text-danger"></span>
            </div>

            <div class="form-group p-2">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
